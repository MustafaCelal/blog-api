# Blog API Environment Variables
# Copy this file to .env and fill in your values

# ===================
# REQUIRED VARIABLES
# ===================

# Database Configuration
DB_URL=jdbc:postgresql://107.172.56.254:5432/blog_db_test
DB_USERNAME=postgre1
DB_PASSWORD=p@ssword

# JWT Configuration (minimum 256 bits / 32 characters, Base64 encoded)
# Generate a secure key: openssl rand -base64 32
JWT_SECRET=your_256_bit_secret_key_here_minimum_32_characters

# ===================
# DEVELOPMENT ONLY
# ===================
# Only used when running with: -Dspring.profiles.active=dev

APP_ADMIN_PASSWORD=your_admin_password
APP_USER_PASSWORD=your_user_password

# ===================
# OPTIONAL VARIABLES
# ===================

# Server
SERVER_PORT=8080

# JWT expiration (milliseconds, default: 24 hours)
JWT_EXPIRATION=86400000

# Logging
LOG_LEVEL=INFO
LOG_LEVEL_SQL=WARN
SHOW_SQL=false

# Thymeleaf
THYMELEAF_CACHE=true
STATIC_CACHE_MAX_AGE=3600
